@using MyEvernote.WebApp.ViewModels
@model InfoViewModel
@{
    ViewBag.Title = Model.Title;
}

<style type="text/css">
    .kapsayici {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
</style>

<div class="kapsayici">
    <div class="card text-white bg-success mb-3" style="max-width: 28rem;  border-color:#ffcd56;">
        <div class="card-header text-center" style="background-color:#ffcd56;"><h2>@Model.Header</h2></div>
        <div class="card-body" style="background-color:white;">
            <h5 class="card-title text-center" style="color : #5fb878; font-size:1.7rem;"><span class="fas fa-info"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h5>
            <hr />
            <p class="card-text text-black-50 text-center">
                @foreach (string msg in Model.Items)
                {
                    @msg<br />
                }
            </p>
        </div>
    </div>
</div>

@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () {window.location = '" + Model.RedirectingUrl + "';},  " + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
        $("footer").hide();
        @Html.Raw(js);
    });
</script>

