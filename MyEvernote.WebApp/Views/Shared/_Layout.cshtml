@using MyEvernote.Entities

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Homepage - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->

    <link href="~/Content/shop-homepage.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />

</head>

<body>
    @{ 
        EvernoteUser user = null;
        if(Session["login"] != null)
        {
            user = Session["login"] as EvernoteUser;
        }
    }
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">My Evernote</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mr-auto">
                    @if (user != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <span class="fas fa-wrench mr-1"></span>Yönetim
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked">
                            <span class="fas fa-heart mr-1"></span>En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <span class="fas fa-th-list mr-1"></span>Son Yazılar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">
                            <span class="fas fa-info mr-1"></span>Hakkımızda
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (user == null)
                    {
                        <li>
                            <a class="nav-link" href="/Home/Login">
                                <span class="fas fa-sign-in-alt mr-1"></span> Giriş
                            </a>
                        </li>
                        <li>
                            <a class="nav-link" href="/Home/Register">
                                <span class="fas fa-user mr-1"></span>Üye Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="nav-link" href="/Home/ShowProfile">
                                <span class="fas fa-user mr-1"></span>@user.Username
                            </a>
                        </li>

                        <li>
                            <a class="nav-link" href="/Home/Logout">
                                <span class="fas fa-door-open mr-1"></span>Çıkış
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 text-center">
                    <h5 class="text-white">
                        <strong>Site Haritası</strong>
                    </h5>
                    <hr class="text-white border-white" />
                    <p >
                        <a class="text-white" href="#"><span class="fas fa-info mr-1"></span>Hakkımızda</a><br />
                        <a class="text-white" href="#"><span class="fas fa-heart mr-1"></span>En Beğenilenler</a><br />
                        <a class="text-white" href="#"><span class="fas fa-th-list mr-1"></span>Son Yazılar</a>
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <h5 class="text-white">
                        <strong>MyEvernote</strong>
                    </h5>
                    <hr class="text-white border-white"/>
                    <p class="text-white">Tüm Hakları Saklıdır. &copy; <br />MyEvernote @DateTime.Now.Year</p>
                </div>

                <div class="col-lg-4 text-center">
                    <h5 class="text-white">
                        <strong>E-Bülten Üyeliği</strong>
                    </h5>
                    <hr class="text-white border-white"/>
                    <div class="col-md-12 col-md-offset-1">
                        
                        <div class="input-group">
                            <input type="text" class="form-control"  placeholder="E-posta Adresiniz"/>
                            <span class="input-group-btn">
                                <button  class="btn btn-default text-white border-secondary" type="submit">
                                <span class="fas fa-send"></span>Gönder</button>
                            </span>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </footer>


</body>

</html>
