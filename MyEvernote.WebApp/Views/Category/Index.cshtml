@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row mt-4">
    <div class="col-md-10 offset-md-1">
        <h2>Kategoriler</h2>
        <hr/>
    </div>
</div>

<div class="row">
    <div class="col-md-10 offset-md-1">
        <p>
            
            <a href="/Category/Create" class="btn btn-secondary"><span class="fas fa-plus-circle mr-2"></span>Create</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        <a href="/Category/Edit/@item.Id" class="btn btn-warning" title="Edit"><span class="fas fa-edit mr-2"></span>Edit</a>
                        <a href="/Category/Details/@item.Id" class="btn btn-info" title="Details"><span class="fas fa-search mr-2"></span>Details</a>
                        <a href="/Category/Delete/@item.Id" class="btn btn-danger" title="Delete"><span class="fas fa-trash mr-2"></span>Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



<script>
    $(function () {
        $("footer").hide();
    });
</script>
